<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite verbose="1" name="Web Tests suite" skipfailedinvocationcounts="false" junit="false" parallel="methods"
       annotations="JDK" thread-count="2">

    <parameter name="suiteOwner" value="nknysh"/>


    <test name="Order Form Tests">
        <classes>
            <class name="web.OrderFormTest">
                <methods>
                    <include name="verifyPlaceOrderFormTest" />
                    <include name="verifyConfirmOrderTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Authentication Tests">
        <classes>
            <class name="web.AuthenticationTest">
                <methods>
                    <include name="verifySignUpTest" />
                    <include name="verifySignUpInWithInvalidInputsTest" />
                    <include name="verifyLogInTest" />
                    <include name="verifyLogInWithInvalidInputsTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Cart Tests">
        <classes>
            <class name="web.CartTest">
                <methods>
                    <include name="verifyShoppingCartTest" />
                    <include name="verifyProductCanBeDeletedFromCartTest" />
                    <include name="verifyMultipleProductsCanBeAddedTest" />
                    <include name="verifyCartAfterLogOutTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Home Tests">
        <classes>
            <class name="web.HomeTest">
                <methods>
                    <include name="verifyCarouselTest" />
                    <include name="verifyCategoriesTest" />
                    <include name="verifyContactTest" />
                    <include name="verifyFooterTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Products Tests">
        <classes>
            <class name="web.ProductsTest">
            <methods>
                <include name="verifyProductDataTest" />
                <include name="verifyProductPageTest" />
            </methods>
            </class>
        </classes>
    </test>
</suite>
